{
  "name": "sauce-demo-automation",
  "version": "1.0.0",
  "description": "Automated test suite for Sauce Labs demo website using Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:codegen": "playwright codegen https://www.saucedemo.com",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "sauce-labs",
    "e-commerce"
  ],
  "author": "QA Automation Engineer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "typescript": "^5.9.2"
  }
}
